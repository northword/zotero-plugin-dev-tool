{
  "name": "zotero-plugin-scaffold",
  "version": "0.0.8",
  "description": "A scaffold for Zotero plugin development.",
  "main": "dist/index.js",
  "bin": {
    "zotero-plugin": "bin/zotero-plugin.mjs"
  },
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint --max-warnings=0 . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "release": "release-it --only-version --preReleaseId=beta",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "zotero",
    "plugin",
    "developer",
    "scaffold",
    "web-ext"
  ],
  "author": "northword",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/northword/zotero-plugin-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/northword/zotero-plugin-scaffold/issues"
  },
  "homepage": "https://github.com/northword/zotero-plugin-scaffold#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "bin/**/*",
    "dist/**/*",
    "template/**/*",
    "docs/**/*",
    "types/**/*.d.ts"
  ],
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.15.5",
  "dependencies": {
    "@inquirer/prompts": "^3.3.2",
    "@octokit/rest": "^20.0.2",
    "bumpp": "^9.3.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "ci-info": "^4.0.0",
    "commander": "^11.1.0",
    "compressing": "^1.10.0",
    "conventional-changelog": "^5.1.0",
    "conventional-commits-detector": "^1.0.3",
    "cosmiconfig": "^9.0.0",
    "dotenv": "^16.4.1",
    "esbuild": "^0.19.12",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lodash": "^4.17.21",
    "mime": "^4.0.1",
    "ora": "^8.0.1",
    "release-it": "^17.0.3",
    "replace-in-file": "^7.1.0",
    "update-notifier": "^7.0.0",
    "web-ext": "^7.11.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/conventional-changelog": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.16",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "node-fetch"
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(publish): release v${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "github": {
      "release": false
    }
  }
}
