{
  "name": "zotero-plugin-scaffold",
  "type": "module",
  "version": "0.1.6",
  "packageManager": "pnpm@9.12.2",
  "description": "A scaffold for Zotero plugin development.",
  "author": "northword",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/northword/zotero-plugin-scaffold#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/northword/zotero-plugin-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/northword/zotero-plugin-scaffold/issues"
  },
  "keywords": [
    "zotero",
    "plugin",
    "developer",
    "scaffold",
    "web-ext"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./vendor": {
      "types": "./dist/vendor/index.d.ts",
      "import": "./dist/vendor/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "zotero-plugin": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "build": "tsc --noEmit && unbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit \"chore(release): publish v%s\"",
    "update:deps": "pnpx taze minor -w -f -l",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "peerDependencies": {
    "conventional-changelog": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "conventional-changelog": {
      "optional": true
    }
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@inquirer/prompts": "^7.0.0",
    "bumpp": "^9.7.1",
    "c12": "^2.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "es-toolkit": "^1.25.2",
    "esbuild": "^0.24.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "hookable": "^5.5.3",
    "mime": "^4.0.4",
    "octokit": "^4.0.2",
    "replace-in-file": "^8.2.0",
    "std-env": "^3.7.0",
    "update-notifier": "^7.3.1",
    "web-ext": "^8.3.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.16.12",
    "@types/update-notifier": "^6.0.8",
    "eslint": "^9.12.0",
    "eslint-plugin-format": "^0.1.2",
    "typescript": "^5.6.3",
    "unbuild": "^2.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "node-fetch"
      ]
    }
  }
}
