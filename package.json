{
  "name": "zotero-plugin-scaffold",
  "type": "module",
  "version": "0.2.0-beta.10",
  "packageManager": "pnpm@9.15.0",
  "description": "A scaffold for Zotero plugin development.",
  "author": "northword",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://github.com/northword/zotero-plugin-scaffold#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/northword/zotero-plugin-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/northword/zotero-plugin-scaffold/issues"
  },
  "keywords": [
    "zotero",
    "plugin",
    "developer",
    "scaffold",
    "web-ext"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./vendor": {
      "types": "./dist/vendor/index.d.ts",
      "import": "./dist/vendor/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "zotero-plugin": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "unbuild --stub",
    "build": "tsc --noEmit && unbuild",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "bumpp --commit \"chore(release): publish v%s\"",
    "update:deps": "pnpx taze minor -w -f -l",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "directories": {
    "lib": "dist",
    "doc": "docs"
  },
  "peerDependencies": {
    "conventional-changelog": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "conventional-changelog": {
      "optional": true
    }
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "adm-zip": "^0.5.16",
    "bumpp": "^9.9.1",
    "c12": "^2.0.1",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "es-toolkit": "^1.29.0",
    "esbuild": "^0.24.0",
    "fs-extra": "^11.2.0",
    "hookable": "^5.5.3",
    "mime": "^4.0.4",
    "octokit": "^4.0.2",
    "std-env": "^3.8.0",
    "tiny-update-notifier": "^2.0.0",
    "tinyglobby": "^0.2.10",
    "xvfb-ts": "^1.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.11.2",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "eslint": "^9.16.0",
    "eslint-plugin-format": "^0.1.3",
    "typescript": "^5.7.2",
    "unbuild": "^2.0.0",
    "vitepress": "^1.5.0"
  }
}